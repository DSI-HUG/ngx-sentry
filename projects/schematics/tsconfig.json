{
    "compilerOptions": {
        "baseUrl": ".",
        "lib": [
            "es2020",
            "dom"
        ],
        "declaration": true,
        "esModuleInterop": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noEmitOnError": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "rootDir": "src",
        "outDir": "../../dist/schematics",
        "skipDefaultLibCheck": true,
        "skipLibCheck": true,
        "sourceMap": false,
        "strictNullChecks": true,
        "target": "es2019",
        "types": [
            "jasmine",
            "node"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "src/**/*.spec.ts",
        "src/**/*/files/**/*"
    ]
}
